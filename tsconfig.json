{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@globals": ["globals.ts"],
      "@shared": ["shared"],
      "@shared/*": ["shared/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@vendor/*": ["vendor/*"],
      "@networking": ["networking"],
      "@networking/*": ["networking/*"],
      "@test": ["test"],
      "@test/*": ["test/*"]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "esnext"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
